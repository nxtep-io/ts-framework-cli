{
  "name": "ts-framework-cli",
  "version": "2.4.0",
  "description": "A minimalistic framework for Typescript applications",
  "author": "Luis Brito <luis@nxtep.io>",
  "license": "MIT",
  "main": "./dist/index.js",
  "bin": {
    "ts-framework": "./dist/bin.js"
  },
  "typings": "./dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nxtep-io/ts-framework-cli.git"
  },
  "scripts": {
    "build": "yarn run -s clean && tsc",
    "postbuild": "./scripts/chmod.sh",
    "clean": "rimraf ./dist",
    "test": "jest --config jest.json",
    "docs": "./scripts/docs.sh",
    "lint": "tslint --config tslint.json --project ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "{api,config,tests}/**/*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  },
  "resolutions": {
    "nodemon/upath": "1.1.0",
    "nodemon/**/upath": "1.1.0"
  },
  "dependencies": {
    "@types/json5": "^0.0.30",
    "@types/yargs": "^12.0.5",
    "json": "^9.0.6",
    "ts-framework": "nxtep-io/ts-framework#2.3.2",
    "ts-framework-common": "nxtep-io/ts-framework-common#2.3.2",
    "yargs": "^12.0.5",
    "yeoman-environment": "^2.3.4"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.4.2",
    "lint-staged": "^7.2.0",
    "nodemon": "^1.18.9",
    "nxtep-typedoc-theme": "nxtep-io/nxtep-typedoc-theme",
    "prettier": "^1.14.0",
    "rimraf": "^2.6.2",
    "sinon": "^5.0.3",
    "ts-jest": "^23.1.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-config-prettier": "^1.14.0",
    "tslint-no-circular-imports": "^0.5.0",
    "typedoc": "^0.13.0",
    "typescript": "^3.2.2"
  },
  "optionalDependencies": {
    "ts-framework-sql": "nxtep-io/ts-framework-sql#2.3.0"
  }
}
